<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Midori Bot - Backup Editor</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      background-color: #f0f4f8;
      color: #333;
    }
    #backupData {
      width: 100%;
      height: 400px;
      font-family: monospace;
      background-color: #1e1e1e;
      color: #ffffff;
      padding: 10px;
      border-radius: 5px;
      border: none;
      resize: none;
    }
    .button {
      background-color: #007aff;
      color: #fff;
      padding: 10px 20px;
      border-radius: 5px;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s;
    }
    .button:hover {
      background-color: #005bb5;
    }
    .header {
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container mx-auto p-4">
    <div class="header">
      <h1 class="text-4xl font-bold mb-2">Midori Bot</h1>
      <h2 class="text-2xl font-semibold text-gray-600">Backup Editor</h2>
    </div>
    <textarea id="backupData"><%= backupData %></textarea>
    <div class="mt-4 text-center">
      <button onclick="saveBackup()" class="button">Save Backup</button>
    </div>
  </div>

  <script>
    async function saveBackup() {
      const backupData = document.getElementById('backupData').value;

      try {
        const response = await fetch(`/backup/<%= backupId %>`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ backupData }),
        });
        const data = await response.json();
        if (response.ok) {
          alert('Backup saved successfully!');
        } else {
          alert(`Error saving backup: ${data.error}`);
        }
      } catch (error) {
        alert(`Error saving backup: ${error.message}`);
      }
    }
  </script>
</body>
</html>